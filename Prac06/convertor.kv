<Widget>:
    canvas.before:
        Color:
            rgba: 255, 255, 255, 1
    color: 0, 0, 0.7, 1

<Button>:
    canvas.after:
        Color:
            rgba: 255, 255, 255, 1
        Line:
            rectangle: self.x + 1, self.y + 1, self.width - 1, self.height - 1

BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            size_hint: 1, 1
            id: get_data
        BoxLayout:
            orientation: 'vertical'
            size_hint_x: None
            width: 200
            Button:
                text: 'up'
                id: up
                on_press: app.up_or_down('up', get_data.text)
                on_press: app.convert_to_km(get_data.text)
            Button:
                text: 'down'
                id: down
                on_press: app.up_or_down('down', get_data.text)
                on_press: app.convert_to_km(get_data.text)
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: display_data
            font_size: 48
            color: (255, 0, 255, 1)